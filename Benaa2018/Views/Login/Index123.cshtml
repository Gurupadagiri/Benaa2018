@model Benaa2018.Helper.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid nopd logoLoginContainer">
    <div class="container">
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 hidden-xs">
            <img class="img-responsive" src="images/icon1.png">
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 text-center">
            <div class="logoLoginCon">
                <a href="#">
                    <img class="img-responsive" src="/images/logo1.jpg">
                </a>
            </div>
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3  hidden-xs">
            <img class="img-responsive" src="images/icon2.png">
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="formOuterContainer">
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5 col-sm-offset-1 col-sm-offset-1 col-md-offset-1">
                <div class="formContainer">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {                        
                        <div class="form-group">
                            @Html.LabelFor(a => a.UserName)
                            @Html.TextBoxFor(a => a.UserName, "this is default value", new { maxlength = 50, size = 10, @class = "form-control input-lg" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(a => a.Password)
                            @Html.PasswordFor(a => a.Password, new { maxlength = 50, size = 10, @class = "form-control input-lg" })                            
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBoxFor(a=>a.RememberMe) Remember me
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <!-- Button -->
                            <div class="col-sm-12 text-center">
                                <button type="submit" class="btn btn-success loginBtn">Login</button>
                            </div>
                            @*@if (Model != null && !string.IsNullOrEmpty(Model.Message))
                            {
                                <span style="color:red">
                                    @Model.Message
                                </span>
                            }*@                            
                        </div>
                        <div class="form-group">
                            <div class="col-md-12 forgetPassword">
                                <div>
                                    Forgot Password <a href="#">
                                        Click Here
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
                <img src="images/bb.png" class="img-responsive clientImage" />
                <a href="#" class="takeOne">
                    <img src="images/custombtn.png" width="84" height="78">
                    <div class="clearfix"></div>
                    <span>
                        Take One<br>
                        With Every Project
                    </span>
                </a>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="container-fluid nopd footerLogin">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center">
        Copyright &copy; 2013 Shada Homes All rights reserved
    </div>
</div>
<!-- Placed at the end of the document so the pages load faster -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
