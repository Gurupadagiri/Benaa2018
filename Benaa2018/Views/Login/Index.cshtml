@model Benaa2018.Helper.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="formOuterContainer col-md-offset-1 col-md-8 col-sm-8 col-xs-10 ">
            <div class="mainLoginHolder">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 leftLogIn">
                    <img src="images/logoB.png" alt="" title="">
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 rightLogIn">
                    <div class="LoginContainer">
                        @*<form id="loginform" class="form-horizontal" role="form">*@
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        <div class="form-group userLogIn">
                            <div class="LogIniconHolder"><img src="images/user.jpg" alt="" title=""></div>
                            @*<input id="login-username" type="text" class="form-control input-lg" name="username" value="" placeholder="Enter Email">*@
                            @Html.TextBoxFor(a => a.UserName, "this is default value", new {  @class = "form-control input-lg" })
                        </div>

                        <div class="form-group userLogIn">
                            <div class="LogIniconHolder"><img src="images/password.jpg" alt="" title=""></div>
                            @*<input id="login-password" type="password" class="form-control input-lg" name="password" placeholder="Password">*@
                            @Html.PasswordFor(a => a.Password, new { @class = "form-control input-lg" })
                        </div>



                        <div class="form-group">
                            <div class="checkbox">
                                @*<input id="login-remember" type="checkbox" name="remember" value="1">*@
                                @Html.CheckBoxFor(a=>a.RememberMe)
                                <label for="login-remember">Remember Me</label>
                            </div>
                        </div>





                        <div class="form-group">
                            <div class="col-md-12 forgetPassword">
                                <span>
                                    Forgot Password ?  <a href="#">
                                        Click Here
                                    </a>
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <!-- Button -->

                            <div class="col-sm-12 ">
                                @*<a id="btn-login" href="index.html" class="btn btn-success loginBtn">Login  </a>*@
                                <button type="submit" class="btn btn-success loginBtn">Login</button>

                            </div>
                        </div>
                        }
                        @*</form>*@

                    </div>
                </div>

            </div>



        </div>




    </div>
</div>
<script>
    $(document).ready(function () { 
        $('body').addClass('bg');
    });
</script>
<style type="text/css">
    .footerContainer{
        display:none;
    }
</style>